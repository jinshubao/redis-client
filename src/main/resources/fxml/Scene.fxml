<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jean.redis.client.controller.MainController">
    <top>
        <VBox>
            <MenuBar BorderPane.alignment="CENTER">
                <Menu mnemonicParsing="false" text="文件">
                    <MenuItem fx:id="newConnectionMenuItem" mnemonicParsing="false" text="新建连接"/>
                </Menu>
                <Menu mnemonicParsing="false" text="帮助">
                    <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="关于"/>
                </Menu>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" spacing="10.0"
                  style="-fx-border-color: #999;" VBox.vgrow="NEVER">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <TextField fx:id="keywordTextFiled" promptText="key、pattern" HBox.hgrow="ALWAYS"/>
                <Button fx:id="searchButton" mnemonicParsing="false" text="搜索"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.2" nodeOrientation="LEFT_TO_RIGHT"
                   BorderPane.alignment="CENTER">
            <TreeView fx:id="serverTreeView" layoutY="30.0"/>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
                <TableView fx:id="keyTableView">
                    <columns>
                        <TableColumn fx:id="keyColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0"
                                     prefWidth="500.0" text="KEY"/>
                        <TableColumn fx:id="typeColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                     resizable="false" text="TYPE"/>
                        <TableColumn fx:id="sizeColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                     resizable="false" text="SIZI"/>
                        <TableColumn fx:id="ttlColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                     resizable="false" text="TTL"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <ListView fx:id="valueListView"/>
            </SplitPane>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" maxHeight="30.0" minHeight="30.0" prefHeight="30.0" style="-fx-border-color: #999;"
              BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label fx:id="serverInfoLabel" text="--"/>
            </HBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Label fx:id="messageLabel" text="--" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </Label>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
